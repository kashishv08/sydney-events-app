<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sydney Events</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      html {
        scroll-behavior: smooth;
      }
      .navBar,
      .eventTicket,
      .eventFooter,
      .botButton {
        background-color: #38b2ac !important;
      }
      .eventFooter {
        margin: 0 !important;
      }
    </style>
  </head>
  <body class="bg-gray-100 text-gray-800 font-sans">
    <!-- Navbar -->
    <nav class="bg-teal-700 p-6 shadow-lg navBar">
      <div class="container mx-auto flex justify-between items-center">
        <a
          href="/"
          class="text-white text-3xl font-bold uppercase tracking-wide hover:text-teal-200"
          >Sydney Events</a
        >
      </div>
    </nav>

    <!-- Telegram Chat Bot Button -->
    <div class="flex justify-center mt-8">
      <button
        onclick="window.open('https://t.me/sydney_event_2025_bot', '_blank')"
        class="bg-teal-600 hover:bg-teal-700 text-white py-3 px-8 rounded-xl text-lg font-semibold shadow-xl transform transition-all duration-300 hover:scale-105 botButton"
      >
        Chat with Sydney Event Bot
      </button>
    </div>

    <!-- Main Content -->
    <div class="container mx-auto p-8">
      <h1 class="text-5xl text-center text-teal-700 font-extrabold mb-12">
        Upcoming Events in Sydney
      </h1>
      <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
        <% events.forEach(event => { %>
        <li
          class="bg-white p-8 rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105"
        >
          <h3
            class="text-2xl font-semibold text-teal-700 mb-4 hover:text-teal-500"
          >
            <%= event.title %>
          </h3>
          <p class="text-gray-600 text-lg mb-6"><%= event.date %></p>
          <form action="/get-tickets" method="GET">
            <input type="hidden" name="link" value="<%= event.link %>" />
            <button
              type="submit"
              class="bg-teal-600 text-white py-3 px-6 rounded-full hover:bg-teal-700 transition duration-300 eventTicket transform hover:scale-105"
            >
              Get Tickets
            </button>
          </form>
        </li>
        <% }); %>
      </ul>
    </div>

    <!-- Footer -->
    <footer class="bg-teal-700 text-white py-6 mt-16 eventFooter">
      <div class="container mx-auto text-center">
        <p class="text-lg">&copy; 2025 Sydney Events. All Rights Reserved.</p>
      </div>
    </footer>
  </body>
</html>
