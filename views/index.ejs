<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sydney Events</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      html {
        scroll-behavior: smooth;
      }
      .navBar,
      .eventTicket,
      .eventFooter,
      .botButton {
        background-color: #38b2ac !important;
      }
      .eventFooter {
        margin: 0 !important;
      }
    </style>
  </head>
  <body class="bg-gray-50 text-gray-800 font-sans">
    <!-- Navbar -->
    <nav class="bg-teal-600 p-4 shadow-md navBar">
      <div class="container mx-auto flex justify-between items-center">
        <a href="/" class="text-white text-2xl font-semibold">Sydney Events</a>
        <ul class="flex space-x-6">
          <li><a href="/" class="text-white hover:text-teal-200">Home</a></li>
          <li>
            <a href="/about" class="text-white hover:text-teal-200">About</a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Telegram Chat Bot Button -->
    <div class="flex justify-center mt-8">
      <button
        onclick="window.open('https://t.me/sydney_event_2025_bot', '_blank')"
        class="bg-teal-500 hover:bg-teal-600 text-white py-3 px-6 rounded-lg text-lg font-semibold botButton shadow-md"
      >
        Chat with Sydney Event Bot
      </button>
    </div>

    <!-- Main Content -->
    <div class="container mx-auto p-6">
      <h1 class="text-4xl text-center text-teal-600 mb-8">
        Upcoming Events in Sydney
      </h1>
      <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% events.forEach(event => { %>
        <li
          class="bg-white p-6 rounded-lg shadow-lg hover:shadow-2xl transition-shadow duration-300"
        >
          <h3 class="text-xl font-semibold text-teal-700 mb-2">
            <%= event.title %>
          </h3>
          <p class="text-gray-500 mb-4"><%= event.date %></p>
          <form action="/get-tickets" method="GET">
            <input type="hidden" name="link" value="<%= event.link %>" />
            <button
              type="submit"
              class="bg-teal-500 text-white py-2 px-4 rounded-full hover:bg-teal-600 transition duration-300 eventTicket"
            >
              GET TICKETS
            </button>
          </form>
        </li>
        <% }); %>
      </ul>
    </div>

    <!-- Footer -->
    <footer class="bg-teal-600 text-white py-4 mt-12 eventFooter">
      <div class="container mx-auto text-center">
        <p>&copy; 2025 Sydney Events. All Rights Reserved.</p>
      </div>
    </footer>
  </body>
</html>
