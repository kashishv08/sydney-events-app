<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Enter Email</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      .emailButton {
        background-color: #4fd1c5;
      }
      html {
        scroll-behavior: smooth;
      }
      .navBar,
      .eventFooter {
        background-color: #38b2ac !important;
      }
      .eventFooter {
        margin: 0 !important;
      }
      .contentContainer {
        margin-bottom: 9rem !important;
      }
    </style>
  </head>
  <body class="bg-gray-50 text-gray-800 font-sans">
    <!-- Navbar -->
    <nav class="bg-teal-500 p-4 shadow-lg navBar">
      <div class="container mx-auto flex justify-between items-center">
        <a href="/" class="text-white text-2xl font-semibold">Sydney Events</a>
        <ul class="flex space-x-6">
          <li><a href="/" class="text-white hover:text-teal-200">Home</a></li>
          <li>
            <a href="/about" class="text-white hover:text-teal-200">About</a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Main Content -->
    <div
      class="container mx-auto p-6 max-w-md bg-white rounded-lg shadow-lg mt-16 contentContainer"
    >
      <h1 class="text-3xl text-teal-600 mb-8 text-center font-bold">
        Enter Your Email to Get Tickets
      </h1>
      <form action="/redirect" method="POST" class="space-y-4">
        <input type="hidden" name="link" value="<%= link %>" />
        <input
          type="email"
          name="email"
          required
          placeholder="Your email"
          class="w-full p-3 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-teal-500"
        />
        <button
          type="submit"
          class="w-full bg-teal-500 text-white py-2 px-4 rounded-lg hover:bg-teal-600 transition duration-300 emailButton"
        >
          Continue
        </button>
      </form>
    </div>

    <!-- Footer -->
    <footer class="bg-teal-500 text-white py-4 mt-12 eventFooter">
      <div class="container mx-auto text-center">
        <p>&copy; 2025 Sydney Events. All Rights Reserved.</p>
      </div>
    </footer>
  </body>
</html>
